<div class="container">
  <div class="row">
    <div class="col-sm-6 centered-form">
      <form action="/gallery" method="post" enctype="multipart/form-data">
        <div class="form-group">
          <label for="title">Title</label>
          <input type="text" name="title" class="form-control" required>
        </div>
        <div class="form-group">
          <label for="startBid">Start Bid</label>
          <input type="number" name="startBid" class="form-control" required>
        </div>
        <div class="form-group">
          <label for="description">Description</label>
          <textarea id="description" name="description" class="form-control" required></textarea>
        </div>
        <div class="form-group">
          <label for="category">Category</label><br>
          <select name="category" id="category">
            <% types.forEach((category) => { %>
              <option type="text" value="<%= category %>" class="form-control"><%= category %></option>
            <%  }) %>
          </select>
        </div>
        <div class="form-group">
          <label for="deadline">Deadline</label>
          <input type="date" name="deadline" class="form-control" required>
        </div>
        <section>
          <label for="image">Image</label>
          <input type="text" name="name" required>
          <input type="file" name="file" required>
        </section>
        <div class="form-group">
          <button type="submit">Create Artwork</button>
        </div>
      </form>
    </div>
    <% if (typeof(errorMessage) != "undefined") { %>
      <div class="error-message"><%= errorMessage %></div>
    <% } %>
  </div>
</div>
